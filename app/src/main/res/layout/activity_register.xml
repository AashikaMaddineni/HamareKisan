<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FAFAFA"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="17dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hamarekisan" />

        <TextView
            android:id="@+id/txtRegistr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Sign Up"
            android:textColor="#000102"
            android:textSize="30sp" />



        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRegistr"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Full Name"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:targetApi="m" />


        <EditText
            android:id="@+id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etName"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLines="1"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:targetApi="m" />


        <EditText
            android:id="@+id/etPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNumber"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_baseline_mail_24"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Email-Id"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:ignore="TextFields"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/etaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordEmail"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_baseline_credit_card_24"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Address"
            android:inputType="text"
            android:maxLines="1"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etaddress"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:targetApi="m" />

        <EditText
            android:id="@+id/ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassword"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edittext_bg"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="7dp"
            android:drawableTint="#585858"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="13dp"
            android:textColorHint="#585858"
            android:textSize="15sp"
            tools:targetApi="m" />


        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConfirmPassword"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000102"
            android:fontFamily="@font/rubik_medium"
            android:padding="12dp"
            android:text="register"
            android:textColor="#E1E1E5"
            android:textSize="15sp"
            app:rippleColor="#666666" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:fontFamily="@font/rubik"
            android:text="already_have_an_account_kindly_login"
            android:textColor="#000000"
            android:textSize="15sp" />

    </RelativeLayout>
</ScrollView>